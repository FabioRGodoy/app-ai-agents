datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}
generator json {
    provider = "prisma-json-types-generator"
}

model User {
    id                 String       @id @default(cuid())
    name               String
    email              String
    password           String
    emailVerified      Boolean
    image              String?
    createdAt          DateTime     @default(now())
    updatedAt          DateTime     @updatedAt
    username           String?
    role               String?
    locale             String?

    @@unique([email])
    @@unique([username])
    @@map("user")
}

